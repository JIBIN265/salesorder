<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml" controllerName="salesorder.ext.view.ViewPdfPage">
    <Page id="ViewPdfPage" title="{i18n>ViewPdfPageTitle}" showNavButton="true" navButtonPress="onBack">
    <content>
		<FlexBox id="_IDGenFlexBox" direction="Column" renderType="Div" class="sapUiSmallMargin" bindingContexts="attachments">
			<FlexBox id="_IDGenFlexBox1" >
				<Button id="_IDGenButton1" text="Correctly Displayed" press="onCorrectPathClick"/>
				<Button id="_IDGenButton2" text="Loading Error" press="onIncorrectPathClick"/>
			</FlexBox>
			<PDFViewer id="_IDGenPDFViewer" source="{/content}" isTrustedSource="true" >
				<layoutData>
					<FlexItemData id="_IDGenFlexItemData" growFactor="1" />
				</layoutData>
			</PDFViewer>
		</FlexBox>
        </content>
    </Page>
</mvc:View>