<core:FragmentDefinition
    xmlns="sap.m"
    id="uploadPdfFragment"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:upload="sap.m.upload"
>
    <Dialog
        id="uploadDialogSet"
        title="PDF Upload"
        closeOnNavigation="true"
        draggable="true"
        resizable="true"
    >
        <content>
            <upload:UploadSet 
                mode="SingleSelect"
                uploadEnabled="true"
                instantUpload="true"
                id="uploadSet"
                items="{path: '/', templateShareable: false}"
                maxFileNameLength="128"
                multiple="false"
                fileTypes="pdf"
                terminationEnabled="true"
            >
                <upload:items>
                    <upload:UploadSetItem 
                        id="_IDGenUploadSetItem1"
                        visibleRemove="true"
                        visibleEdit="false"
                        selected="true"
                        fileName="{name}"
                        url="/upload"
                    />
                </upload:items>
            </upload:UploadSet>
        </content>
    </Dialog>
</core:FragmentDefinition>